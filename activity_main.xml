<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/point1"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"

            />
            <TextView
                android:id="@+id/point2"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"

            />
            <TextView
                android:id="@+id/point3"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"

            />


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/liner"
        android:layout_width="181dp"
        android:layout_height="218dp"
        app:srcCompat="@drawable/photo1676513477"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="60sp"
        android:width="100sp"


        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/vopros"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_below="@id/liner"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="50sp"
        android:background="@color/beige"
        android:backgroundTint="@color/beige"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/quest"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="145dp" />



    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_marginTop="30sp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/btn"

        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="638dp" />


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginHorizontal="140sp"
        android:layout_marginTop="150sp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/btn2"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="147dp"
        android:layout_height="201dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="70sp"
        android:backgroundTint="@color/beige"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/ans1"
        android:textColor="@color/blacc" />

    <Button
        android:id="@+id/button2"
        android:layout_width="147dp"
        android:layout_height="201dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="70sp"
        android:backgroundTint="@color/beige"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/ans2"
        android:textColor="@color/blacc" />




</RelativeLayout>
